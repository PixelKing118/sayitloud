<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/styles.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Posts</title>
</head>
<body>

    <h1>Welcome to the Forum</h1>
    
    <!-- Grid container for posts -->
    <div class="posts-grid">
        <% posts.forEach(function(post) { %>
            <div class="post-card">
                <h2><a href="/posts/<%= post._id %>"><%= post.title %></a></h2>
                <p><%= post.content.substring(0, 100) %>...</p> <!-- Show first 100 chars -->
                <small>Posted on: <%= post.createdAt.toDateString() %></small>
            </div>
        <% }); %>
    </div>

</body>
</html>