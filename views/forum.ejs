<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Forum</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <nav>
            <a href="/">Home</a>
            <a href="/about">About</a>
            <a href="/forum">Forum</a>
        </nav>
    </header>
    
    <main>
        <h1>Forum</h1>
        
        <!-- Create New Post Form -->
        <section id="create-post">
            <h2>Create a New Post</h2>
            <form action="/forum/create-post" method="POST">
                <input type="text" name="title" placeholder="Post Title" required>
                <textarea name="content" placeholder="Write your post..." required></textarea>
                <button type="submit">Post</button>
            </form>
        </section>

        <!-- List of Posts -->
        <section id="post-list">
            <h2>Recent Posts</h2>
            <ul>
                <!-- Loop through posts and display them here -->
                <% if (posts && posts.length > 0) { %>
                    <% posts.forEach(post => { %>
                        <li>
                            <a href="/forum/<%= post._id %>"><%= post.title %></a>
                        </li>
                    <% }) %>
                <% } else { %>
                    <p>No posts yet!</p>
                <% } %>
            </ul>
        </section>
    </main>

    <footer>
        <p>Powered by Node.js and Nginx</p>
    </footer>
</body>
</html>