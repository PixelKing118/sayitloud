<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Text App</title>
    <link rel="stylesheet" href="/styles.css">
    <nav>
        <a href="/">Home</a>
        <a href="/about">About</a>
    </nav>
</head>
<body>

    <h1>Submit Your Text</h1>

    <div class="form-container">
        <!-- Single form for submission -->
        <form action="/submit" method="POST">
            <input type="text" name="text" placeholder="Enter your message" required>
            <button type="submit">Submit</button>
        </form>
    </div>

    <h2>Submitted Texts:</h2>
<ul>
    <% submittedTexts.forEach(function(message) { %>
        <li><%= message.content %></li>
    <% }); %>
</ul>


</body>
</html>
