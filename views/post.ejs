<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/styles.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.title %></title>
</head>
<body>

    <div class="form-container">
        <h1><%= post.title %></h1> <!-- Display the post title -->
        <p><%= post.content %></p> <!-- Display the post content -->
        <p>Posted on: <%= post.createdAt.toDateString() %></p> <!-- Display the date -->
        <a href="/">Back to Home</a>
    </div>

    <ul>
        <% post.comments.forEach(function(comment) { %>
            <li>
                <strong><%= comment.author %>:</strong> <%= comment.text %>
                <form action="/posts/<%= post._id %>/comments/<%= comment._id %>/reply" method="POST">
                    <input type="text" name="replyText" placeholder="Reply..." required>
                    <input type="text" name="replyAuthor" placeholder="Your name (optional)">
                    <button type="submit">Reply</button>
                </form>
                <ul>
                    <% comment.replies.forEach(function(reply) { %>
                        <li><strong><%= reply.author %>:</strong> <%= reply.text %></li>
                    <% }); %>
                </ul>
            </li>
        <% }); %>
    </ul>
    
    <!-- Form to add a new comment -->
    <h2>Add a Comment:</h2>
    <form action="/posts/<%= post._id %>/comment" method="POST">
        <input type="text" name="commentText" placeholder="Your comment" required>
        <input type="text" name="commentAuthor" placeholder="Your name (optional)">
        <button type="submit">Submit Comment</button>
    </form>

</body>
</html>
