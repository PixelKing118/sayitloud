<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/styles.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.title %></title>
</head>
<body>

    <div class="form-container">
        <h1><%= post.title %></h1>
        <p><%= post.content %></p>
        <p2>Posted on: <%= post.createdAt.toDateString() %></p2>
        
        <h2>Comments:</h2>
        <ul id="comments-list-<%= post._id %>">
            <% post.comments.forEach(function(comment) { %>
                <li>
                    <strong><%= comment.author %>:</strong> <%= comment.text %>
                    <div class="reply-input-container" style="display: inline;">
                        <button class="reply-button" onclick="toggleReplyBox('<%= post._id %>', '<%= comment._id %>', 'comment')">Reply</button>
                    </div>
                    <div class="reply-input-container" id="reply-input-<%= post._id %>-<%= comment._id %>" style="display: none;">
                        <input type="text" class="reply-input" placeholder="Your reply here...">
                        <button class="submit-reply-button" onclick="submitReply('<%= post._id %>', '<%= comment._id %>', 'comment')">Submit</button>
                    </div>
                    <ul class="reply-list" id="reply-list-<%= comment._id %>">
                        <% comment.replies.forEach(function(reply) { %>
                            <li style="margin-left: 20px;"> <!-- Indent for replies -->
                                <strong><%= reply.author %>:</strong> <em><%= reply.text %></em>
                                <div class="reply-input-container" style="display: inline;">
                                    <button class="reply-button" onclick="toggleReplyBox('<%= post._id %>', '<%= comment._id %>', 'reply', '<%= reply._id %>')">Reply</button>
                                </div>
                                <div class="reply-input-container" id="reply-input-<%= post._id %>-<%= comment._id %>-<%= reply._id %>" style="display: none;">
                                    <input type="text" class="reply-input" placeholder="Your reply here...">
                                    <button class="submit-reply-button" onclick="submitReply('<%= post._id %>', '<%= comment._id %>', 'reply', '<%= reply._id %>')">Submit</button>
                                </div>
                                <ul class="reply-list" id="reply-list-<%= reply._id %>">
                                    <% reply.replies.forEach(function(subReply) { %>
                                        <li style="margin-left: 20px;"> <!-- Further indent for sub-replies -->
                                            <strong><%= subReply.author %>:</strong> <em><%= subReply.text %></em>
                                            <div class="reply-input-container" style="display: inline;">
                                                <button class="reply-button" onclick="toggleReplyBox('<%= post._id %>', '<%= comment._id %>', 'reply', '<%= reply._id %>')">Reply</button>
                                            </div>
                                            <div class="reply-input-container" id="reply-input-<%= post._id %>-<%= comment._id %>-<%= reply._id %>-<%= subReply._id %>" style="display: none;">
                                                <input type="text" class="reply-input" placeholder="Your reply here...">
                                                <button class="submit-reply-button" onclick="submitReply('<%= post._id %>', '<%= comment._id %>', 'reply', '<%= reply._id %>', '<%= subReply._id %>')">Submit</button>
                                            </div>
                                        </li>
                                    <% }); %>
                                </ul>
                            </li>
                        <% }); %>
                    </ul>
                </li>
            <% }); %>
        </ul>

        <div class="comment-input-container">
            <input type="text" class="comment-input" placeholder="Your comment here..." id="comment-input-<%= post._id %>">
            <button class="submit-comment-button" onclick="submitComment('<%= post._id %>')">Submit</button>
        </div>
    </div>
    
    <script>
        function submitComment(postId) {
            const commentInput = document.getElementById(`comment-input-${postId}`);
            const commentText = commentInput.value;

            if (!commentInput) {
                console.error("Comment input field not found");
                return; // Exit early if input is not found
            }

            if (commentText.trim() === "") {
                alert("Comment cannot be empty!");
                return;
            }

            fetch(`/posts/${postId}/comment`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    commentText: commentText,
                    commentAuthor: "Anonymous"
                }),
            })
            .then(response => response.json())
            .then(data => {
                commentInput.value = ''; // Reset input field
                
                const commentsList = document.getElementById(`comments-list-${postId}`);
                const newCommentItem = document.createElement('li');
                newCommentItem.innerHTML = `<strong>${data.commentAuthor}:</strong> ${data.commentText}
                    <div class="reply-input-container" style="display: inline;">
                        <button class="reply-button" onclick="toggleReplyBox('${postId}', '${data.commentId}', 'comment')">Reply</button>
                    </div>
                    <div class="reply-input-container" id="reply-input-${postId}-${data.commentId}" style="display: none;">
                        <input type="text" class="reply-input" placeholder="Your reply here...">
                        <button class="submit-reply-button" onclick="submitReply('${postId}', '${data.commentId}', 'comment')">Submit</button>
                    </div>
                    <ul class="reply-list" id="reply-list-${data.commentId}"></ul>`;
                commentsList.appendChild(newCommentItem);
            })
            .catch((error) => {
                console.error('Error:', error);
            });
        }

        function toggleReplyBox(postId, commentId, type, replyId = '', subReplyId = '') {
            const replyInputContainer = document.getElementById(`reply-input-${postId}-${commentId}${replyId ? '-' + replyId : ''}${subReplyId ? '-' + subReplyId : ''}`);
            replyInputContainer.style.display = replyInputContainer.style.display === 'none' ? 'block' : 'none';
        }

        function submitReply(postId, commentId, type, replyId = '', subReplyId = '') {
            const replyInput = document.querySelector(`#reply-input-${postId}-${commentId}${replyId ? '-' + replyId : ''}${subReplyId ? '-' + subReplyId : ''} .reply-input`);
            const replyText = replyInput.value;

            if (replyText.trim() === "") {
                alert("Reply cannot be empty!");
                return;
            }

            // Count the number of replies to prevent exceeding the limit
            const replyListId = replyId ? replyId : commentId;
            const replyCount = document.querySelectorAll(`#reply-list-${replyListId} li`).length;

            if (replyCount >= 5) {
                alert("Maximum reply limit reached! You can't reply more than 5 times in a chain.");
                return;
            }

            fetch(`/posts/${postId}/comment/${commentId}/reply`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    replyText: replyText,
                    replyAuthor: "Anonymous"
                }),
            })
            .then(response => response.json())
            .then(data => {
                replyInput.value = ''; // Reset input field

                // Delay the DOM manipulation to ensure it executes after the reply list is rendered
                setTimeout(() => {
                    const replyList = document.querySelector(`#reply-list-${replyListId}`);
                    const newReplyItem = document.createElement('li');
                    newReplyItem.innerHTML = `<strong>${data.replyAuthor}:</strong> <em>${data.replyText}</em>`;
                    newReplyItem.innerHTML += `
                        <div class="reply-input-container" style="display: inline;">
                            <button class="reply-button" onclick="toggleReplyBox('${postId}', '${commentId}', 'reply', '${data.replyId}')">Reply</button>
                        </div>
                        <div class="reply-input-container" id="reply-input-${postId}-${commentId}-${data.replyId}" style="display: none;">
                            <input type="text" class="reply-input" placeholder="Your reply here...">
                            <button class="submit-reply-button" onclick="submitReply('${postId}', '${commentId}', 'reply', '${data.replyId}')">Submit</button>
                        </div>`;
                    replyList.appendChild(newReplyItem);
                }, 100); // 100 milliseconds delay
            })
            .catch((error) => {
                console.error('Error:', error);
            });
        }

    </script>
</body>
</html>
