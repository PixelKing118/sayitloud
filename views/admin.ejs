<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/admin.css"> <!-- Optional: create a separate CSS file for admin styling -->
</head>
<body>
    <h1>Admin Dashboard</h1>
    <h2>Manage Posts and Comments</h2>

    <% posts.forEach(post => { %>
        <div class="post">
            <h3><%= post.title %></h3>
            <p><%= post.content %></p>

            <!-- Delete post button -->
            <form action="/admin/delete-post/<%= post._id %>" method="POST">
                <button type="submit">Delete Post</button>
            </form>

            <!-- Comments Section -->
            <h4>Comments</h4>
            <% post.comments.forEach(comment => { %>
                <div class="comment">
                    <p><strong><%= comment.author %></strong>: <%= comment.content %></p>
                    <form action="/admin/delete-comment/<%= post._id %>/<%= comment._id %>" method="POST">
                        <button type="submit">Delete Comment</button>
                    </form>
                </div>
            <% }) %>
        </div>
        <hr>
    <% }) %>
</body>
</html>
